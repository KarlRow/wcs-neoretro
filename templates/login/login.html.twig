{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if is_granted('ROLE_USER') %}
    <p>{{ last_username }}</p>
    <a href="{{ path('logout') }}">DÃ©connexion</a>
{% else %}
    <form action="{{ path('dashboard') }}" method="post">
        <div>
            <input type="text" id="username" name="_username" placeholder="username">
            <input type="password" id="password" name="_password" placeholder="password">
        </div>

        <a href="">Forgot password ?</a><br>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit">LOG IN</button>
    </form>

    <a href="{{ path('register') }}">New player ?</a>
    <a href="{{ path('register') }}">Sign Up</a>
{% endif %}
