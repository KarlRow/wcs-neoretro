{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block content %}

<div class="card full-size">
    <div class="content">
        <h2>Event</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ event.id }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ event.label }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>EndDate</th>
                    <td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>IsVisible</th>
                    <td>{{ event.isVisible ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ event.slug }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('event_index') }}">back to list</a>

        <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

        {{ include('event/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
