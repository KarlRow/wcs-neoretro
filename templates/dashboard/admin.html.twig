{% extends 'base.html.twig' %}

{# {% extends 'login/login.html.twig' %} #}

{% block title %}• Admin Dashboard{% endblock %}

{% block content %}

<div id="dashboard" class="grid">
        
    <section class="card cell-admin">
        <div class="content">
        {% if app.user %}
        <h2>{{ last_username }}</h2>
        <p><a href="{{ path('logout') }}">Déconnexion</a>
    {% endif %}

        </div>
    </section>

    <section class="card cell-played">
        <div class="content">
            <h2>Arcade room games</h2>
            {% if app.user %}
        <a href="{{ path('new_game') }}">Add New Game</a>
    {% endif %}
      {% if games is defined and games|length > 0 %}
            <ul>
                {% for game in games %}
                    {% if game.IsVisual == false %}
                    <li>
                        <strong>{{ game.title }}</strong>
                        <img src="{{ vich_uploader_asset (game) }}" alt="{{ game.title }} poster" />
                    </li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun jeu ajouté pour le moment.</p>
        {% endif %}
        </div>
    </section>

    <section class="card cell-high-score">
        <div class="content">
            <h2>High Score</h2>

        </div>
    </section>
    
    <section class="card cell-this-week">
        <div class="content">
            <h2>This week</h2>

        </div>
    </section>

    <section class="card cell-the-room">
        <div class="content">
            <h2>The Room</h2>

        </div>
    </section>

    <section class="card cell-newest-game">
        <div class="content">
            <h2>Newest game</h2>

        </div>
    </section>

    <section class="card cell-mini-games">
        <div class="content">
            <h2>Mini-Games</h2>

        </div>
    </section>

    <section class="card cell-scores">
        <div class="content">
            <h2>Scores</h2>

        </div>
    </section>

    <section class="card cell-arcade-games">
        <div class="content">
            <h2>Arcade Games</h2>

        </div>
    </section>

</div>

{% endblock %}
