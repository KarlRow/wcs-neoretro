{% extends 'base.html.twig' %}

{% block content %}

<div id="dashboard" class="grid">

    <section class="card cell-played-admin">
        <div class="content">
            <div class="logout">
                <h2>Logged as: {{ last_username }}</h2>
                <a href="{{ path('logout') }}">Logout</a>
            </div>
            <div class="messages-success-block">
                {% for game, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="messages-success">
                            <p>{{ message }}</p>
                            <div class="img-block">
                                <img src="{{ asset('build/images/icons/valide.png')}}" alt="valide icons">
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="nav-admin">
                <a href="{{ path('game_new') }}">
                    <h1>New Game</h1>
                    <img class="icon" src="{{ asset('build/images/icons/add-new-game.png') }}" alt="Add new game icon">
                </a>
                <a href="{{ path('prize_new') }}">
                    <h1>New Prize</h1>
                    <img class="icon" src="{{ asset('build/images/icons/add-new-game.png') }}" alt="Add new game icon">
                </a>
                <a href="{{ path('prize_index') }}">
                    <h1>Prize's List</h1>
                    <img class="icon" src="{{ asset('build/images/icons/eye.png') }}" alt="Eye icon">
                </a>
                <a href="">
                    <h1>Events List</h1>
                    <img class="icon" src="{{ asset('build/images/icons/eye.png') }}" alt="Eye icon">
                </a>
                <a href="">
                    <h1>New Event</h1>
                    <img class="icon" src="{{ asset('build/images/icons/add-new-game.png') }}" alt="Add new game icon">
                </a>
            </div>
        </div>
    </section> 
</div>

{% endblock %}
