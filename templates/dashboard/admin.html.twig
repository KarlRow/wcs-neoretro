{% extends 'base.html.twig' %}

{# {% extends 'login/login.html.twig' %} #}

{% block title %}• Admin Dashboard{% endblock %}

{% block content %}

<div id="dashboard" class="grid">
        
    <section class="card cell-admin">
        <div class="content">
        {% if app.user %}
        <h2>{{ last_username }}</h2>
        <p><a href="{{ path('logout') }}">Déconnexion</a>
    {% endif %}

        </div>
    </section>

    <section class="card cell-played-admin">
        <div class="content">
            <h2>Games Added Unvisible</h2>
            {% if app.user %}
        <div class="add-new-game-title">
            <a class="add-new-game-icon" href="{{ path('new_game') }}">Add New Game <img class="icon" src="{{ asset('build/images/icons/add-new-game.png') }}" alt="Add new game icon"></a>
        </div>
    {% endif %}

    {% if games is defined and games|length > 0 %}
    <div class="game-played-admin">
        <ul class="scrollable-list">
            {% for game in games %}

                {% if game.IsVisible == false %}
                    <li>
                        <a href="{{ path("edit_game", { slug: game.slug }) }}"><img src="{{ asset('build/images/icons/edit-icon.png') }}"></a>
                        <h1 class="fixed-title">{{ game.title }}</h1>
                        <img class="img-resize" src="{{ vich_uploader_asset(game) }}" alt="{{ game.title }} poster" />
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% else %}
    <p>Aucun jeu ajouté pour le moment.</p>
{% endif %}
</div>
</section>


    {# <section class="card cell-high-score">
        <div class="content">
            <h2>High Score</h2>

        </div>
    </section> #}
    
    {# <section class="card cell-this-week">
        <div class="content">
            <h2>This week</h2>

        </div>
    </section> #}

    <section class="card cell-the-room">
        <div class="content">
            <h2>The Room</h2>

        </div>
    </section>

    <section class="card cell-newest-game">
        <div class="content">
            <h2>Newest game</h2>

        </div>
    </section>

    <section class="card cell-mini-games">
        <div class="content">
            <h2>Mini-Games</h2>

        </div>
    </section>

    <section class="card cell-scores">
        <div class="content">
            <h2>Scores</h2>

        </div>
    </section>

    <section class="card cell-arcade-games">
        <div class="content">
            <h2>Arcade Games</h2>

        </div>
    </section>

</div>

{% endblock %}
