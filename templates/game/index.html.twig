                    <td>
                        <a href="{{ path('app_game_show', {'slug': game.slug}) }}">show</a>
                    </td>
                </div>
            </div>
        {% else %}
            <div class="card full-size">
                <div class="content">
                    No games yet
                </div>
            </div>
        {% endfor %} #}

{% endblock %}
