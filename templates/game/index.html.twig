{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block content %}

        <ul id="carousel">

            {% for i in 0..(games|length / 6) %}
            {# {% for i in 0..0 %} #}
    
                <ul class="games grid">
                    {% for y in 1..6 %}
                        <section class="card">
                            <div class="content">
                                {% if games[y + (6*i)] is defined %}
                                    <img class="game-poster" src="{{ games[y + (6*i)].poster }}" alt="">
                                    <h2>{{ games[y + (6*i)].title }}</h2>

                                    <div class="game-infos">
                                        <div class="game-category-container">
                                            {% for category in games[y + 6*i].categories %}
                                                <p class="game-category">
                                                    {{category.label}}
                                                </p>
                                            {% endfor %}
                                        </div>
    
                                        <div class="game-stats">
                                            <div class="game-highest-score">
                                                <img src="{{ asset('build/images/icons/trophy-solid.svg') }}" alt="Champion's cup">
                                                <p>1 276 378</p>
                                            </div>
                                            <div class="game-time-spent">
                                                <img src="{{ asset('build/images/icons/clock-1.svg') }}" alt="Clock">
                                                <p>0:34</p>
                                            </div>
                                        </div>
                                    </div>

                                {% else %}
                                    <h2>...</h2>
                                {% endif %}
                            </div>
                        </section>
                    {% endfor %}
                </ul>
    
            {% endfor %}

        </ul>


        {# {% for game in games %}
            <div class="card">
                <div class="content">
                    <td>{{ game.id }}</td>
                    <td>{{ game.title }}</td>
                    <td><img src="{{ game.poster }}" alt=""></td>
                    <td>{{ game.description }}</td>
